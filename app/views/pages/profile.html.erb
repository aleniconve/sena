<%= render "shared/navbar" %>

<div class="container" style="padding-top: 90px;">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-start">
      <div>
        <h3>Hi, <%= current_user.first_name %>&nbsp;&nbsp;<i class="fa-solid fa-hand fa-rotate-by" style="--fa-rotate-angle: 30deg;"></i></h3>
        <div style="height: 6px;"></div>
        <p>You have <span style="font-weight: 600;"><%= @bookmarks_count %> videos</span><br>and <span style="font-weight: 600;"><%= @folders.count %> folders</span></p>
      </div>
    </div>
    <div class="d-flex justify-content-end align-items-top">
      <%= image_tag "https://res.cloudinary.com/dq1ieegre/image/upload/v1708015145/9BF2648B-C177-4CC2-8D5F-1146E51184DF_u0frjn.png", style: "height: 90px; border-radius: 50%;" %>
    </div>
  </div>
</div>

<hr>

<div class="container">
  <div>
    <h4>Practice your favorites</h4>
    <div style="height: 12px;"></div>

    <div class="flex">
      <% @favorites_folder.videos.each do |video| %>
      <div style="margin-right: 12px;">
        <div>
          <%= link_to video_path(video) do %>
            <%= cl_video_tag video.video.key, class: "rounded item flex-item" %>
          <% end %>
        </div>
        <div class="d-flex justify-content-start">
          <p style="font-weight: 600;"><%= video.name %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
